datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id               String  @id @default(cuid())
  title            String  @default("")
  subtitle         String  @default("")
  image_id         String?
  image_filesize   Int?
  image_width      Int?
  image_height     Int?
  image_extension  String?
  shortDescription String  @default("")
  description      String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  externalLink     String  @default("")
}

model Page {
  id      String @id @default(cuid())
  title   String @default("")
  content String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Homepage {
  id                    String @id @default(cuid())
  title                 String @default("")
  heroSectionTitle      String @default("")
  heroSectionContent    String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  aboutSectionTitle     String @default("")
  aboutSectionContent   String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  workSectionTitle      String @default("")
  workSectionContent    String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  contactSectionTitle   String @default("")
  contactSectionContent String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  twitter               String @default("")
  linkedin              String @default("")
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}
